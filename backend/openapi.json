{
  "openapi": "3.0.3",
  "info": {
    "title": "MiniCloud Backend API",
    "version": "1.0.0",
    "description": "Minimal OpenAPI spec for backend with OAuth2 for Swagger UI"
  },
  "servers": [
    {
      "url": "http://localhost:8081",
      "description": "Local backend"
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "description": "OAuth2 authentication using Keycloak",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "http://localhost:8082/auth/realms/master/protocol/openid-connect/auth",
            "tokenUrl": "http://localhost:8082/auth/realms/master/protocol/openid-connect/token",
            "scopes": {
              "openid": "OpenID Connect scope",
              "profile": "User profile information",
              "email": "User email address"
            }
          }
        }
      }
    },
    "schemas": {
      "Subject": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Class": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Student": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "classId": {
            "type": "integer"
          },
          "className": {
            "type": "string"
          }
        }
      },
      "Grade": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "studentId": {
            "type": "integer"
          },
          "studentName": {
            "type": "string"
          },
          "subjectId": {
            "type": "integer"
          },
          "subjectName": {
            "type": "string"
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 10
          },
          "examDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  },
  "security": [
    {
      "oauth2": [
        "openid"
      ]
    }
  ],
  "paths": {
    "/hello": {
      "get": {
        "summary": "Hello endpoint",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/student": {
