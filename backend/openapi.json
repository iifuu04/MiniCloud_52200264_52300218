      "get": {
        "summary": "Check database connectivity",
        "responses": {
          "200": {
            "description": "Successfully connected to database",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "connected": {
                      "type": "boolean"
                    },
                    "serverTime": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database connection failed"
          }
        }
      }
    },
    "/api/subjects": {
      "get": {
        "summary": "List all subjects",
        "responses": {
          "200": {
            "description": "Array of subjects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Subject"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error"
          }
        }
      },
      "post": {
        "summary": "Create a new subject",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Subject name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Subject created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Subject"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    },
